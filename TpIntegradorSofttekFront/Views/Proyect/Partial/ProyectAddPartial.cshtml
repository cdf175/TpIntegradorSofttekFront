@model TpIntegradorSofttekFront.ViewModels.ProyectViewModel

<div class="modal fade" id="proyectModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Alta y/o modificación de Servicio.</h5>
            </div>

            @using (Html.BeginForm("SaveProyect", "/Proyect", FormMethod.Post))
            {
                <div class="modal-body">
                    @Html.HiddenFor(x=> x.Id)
                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-control-label">Nombre</label>
                            @Html.EditorFor(x=> x.Name, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>

                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-2 form-control-label">Direccion</label>                         
                            @Html.EditorFor(x=> x.Address, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-2 form-control-label">Estado</label>
                            @Html.DropDownListFor(x=> x.State,
                            new SelectList(new List<SelectListItem>
                                {
                                new SelectListItem { Text = "Pendiente", Value = "1" },
                                new SelectListItem { Text = "Confirmado", Value = "2" },
                                new SelectListItem { Text = "Terminado", Value = "3" }
                                }, "Value", "Text"), 
                            "Seleccione..",
                            new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>

                 
                    </div>
                    
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success" id="btnGuardar">Guardar</button>
                </div>
            }
        </div>
    </div>
</div>
