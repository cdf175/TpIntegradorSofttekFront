@model TpIntegradorSofttekFront.ViewModels.WorkViewModel
<div class="modal fade" id="workDModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Eliminacíon de Trabajo.</h5>
            </div>
            @using (Html.BeginForm("DeleteWork", "/Work", FormMethod.Post))
            {
                <div class="modal-body">
                    @Html.HiddenFor(x=> x.Id)
                    @Html.HiddenFor(x=> x.ProyectId)
                    @Html.HiddenFor(x=> x.ServiceId)
                    @Html.HiddenFor(x=> x.HourValue)
                    @Html.HiddenFor(x=> x.HourQuantity)
                    
                    <div class="row">
                        <h3>Desea eliminar este trabajo?</h3>
                    </div>
                </div>

                <div class="modal-footer w-100">
                    <button type="button" class="btn btn-secondary w-25" data-bs-dismiss="modal">No</button>
                    <button type="submit" class="btn btn-danger w-25" id="btnGuardar">Si</button>
                </div>
            }
        </div>
    </div>
</div>
